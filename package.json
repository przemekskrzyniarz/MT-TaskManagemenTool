{
  "name": "node-typescript-jest-starter",
  "version": "0.0.1",
  "description": "basic node.js, typescript, and jest project starter",
  "main": "frontend/build/server.js",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "prettier": "^2.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.33",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.0.0-pre.32",
    "typescript": "^4.2.3",
    "wait-on": "^5.2.1"
  },
  "scripts": {
    "build": "rimraf dist && tsc && cd frontend && npm install && npm run build",
    "buildv2": "rimraf dist && tsc",
    "start": "node dist/server.js",
    "dev": "run-p --race start:app start:frontend",
    "start:app": "cd src && ts-node-dev --respawn --transpileOnly ./server.ts && wait-on tcp:5000",
    "start:frontend": "cd frontend && npm run start",
    "test": "jest --watch",
    "coverage": "jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
